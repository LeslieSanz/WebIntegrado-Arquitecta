<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>prueba</servlet-name>
        <servlet-class>controlador.prueba</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProyectoCRUD</servlet-name>
        <servlet-class>controlador.ProyectoControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlUsuario</servlet-name>
        <servlet-class>controlador.controlUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlCursos</servlet-name>
        <servlet-class>controlador.controlCursos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProyectoControl</servlet-name>
        <servlet-class>controlador.ProyectoControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>prueba</servlet-name>
        <url-pattern>/prueba</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProyectoCRUD</servlet-name>
        <url-pattern>/ProyectoCRUD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlUsuario</servlet-name>
        <url-pattern>/controlUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProyectoControl</servlet-name>
        <url-pattern>/ProyectoControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlCursos</servlet-name>
        <url-pattern>/controlCursos</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>controlCompras</servlet-name>
        <url-pattern>/controlCompras</url-pattern>
    </servlet-mapping>

<servlet>
        <servlet-name>controlCompras</servlet-name>
        <servlet-class>controlador.controlCompras</servlet-class>
    </servlet>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
